<div
  class="container-fluid container-fluid-custom pb-5 mb-5 container container-custom"
>
  <div class="row mb-4">
    <div class="col">
      <nav class="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
          <li class="breadcrumb-item active" aria-current="page">
            <%= note.title %>
          </li>
        </ol>
      </nav>

      <div class="col d-flex justify-content-between align-items-center">
        <h1
          class="fs-2 fw-bold text-center text-primary"
          style="font-size: 2.5rem; font-weight: 700; margin-top: 1rem"
        >
          <%= note.title %>
        </h1>

        <button
          type="button"
          class="btn btn-danger btn-lg"
          data-bs-toggle="modal"
          id="deleteButton"
          data-bs-target="#deleteModal"
        >
          Trash this note...
        </button>
      </div>
    </div>
  </div>

  <!-- form -->
  <form
    action="/dashboard/item/<%= noteId %>?_method=PUT"
    method="POST"
    class="position-relative"
  >
    <div class="form-group mb-4" style="left: 1px; top: 1px; right: 1px">
      <input
        type="text"
        class="form-control fw-bold border-0 fs-4 text-center text-primary"
        id="title"
        name="title"
        value="<%= note.title %>"
        placeholder="Title"
      />
    </div>

    <div class="form-group mb-4">
      <textarea
        class="form-control border-0 fs-5 text-primary"
        id="body"
        name="body"
        placeholder="Take a note..."
        rows="10"
      >
<%= note.body %></textarea
      >
    </div>

    <div class="form-group">
      <button type="submit" class="btn btn-primary btn-lg fw-bold">
        <i class="fas fa-save me-2"></i>
        Update Note
      </button>
    </div>
  </form>
</div>

<!-- Modal functionality -->

<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-center">
          <i class="fas fa-exclamation-triangle text-danger me-2"></i>
          <span class="text-danger text-center fw-bold">Warning!</span>
        </h5>
        <button
          type="button"
          class="close"
          data-bs-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>
          Are you sure you want to delete
          <b class="fw-bold"> <%= note.title %>? </b>
          <br />
          This action cannot be undone.
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Close
        </button>
        <form
          action="/dashboard/item/<%= noteId %>?_method=DELETE"
          method="POST"
        >
          <button type="submit" class="btn btn-primary">Delete Note</button>
        </form>
      </div>
    </div>
  </div>
</div>
